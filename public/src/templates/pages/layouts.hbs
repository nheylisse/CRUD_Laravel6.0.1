							<span class="label label-default">.{{prefix}}fixed-ribbon</span>
							<br>
							<br>
							<img src="assets/img/layout-skins/layout-rtl-menutop.png" class="img-responsive center-block img-layouts">
						</div>
					</div>
						
				</div>
				<!-- end row -->
			</section>
